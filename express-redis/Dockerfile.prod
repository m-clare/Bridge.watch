#------------------>Production image
FROM node:lts-alpine

WORKDIR /usr/src/app
COPY ./package*.json ./

RUN apk add dumb-init
RUN apk add sudo
RUN apk add curl
RUN npm install --only=production

ENV NODE_ENV production
USER node
COPY --chown=node:node . /usr/src/app
CMD ["dumb-init", "node", "server.js"]