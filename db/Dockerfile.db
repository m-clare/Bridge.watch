FROM postgres:13.0-alpine

RUN mkdir /db

ADD ./db/BadCleaned.csv /db

ADD ./db/fk_csvs/*.csv /db/fk_csvs/

ADD ./db/load_db.sql /docker-entrypoint-initdb.d

RUN chown postgres:postgres /db/*
RUN chown postgres:postgres /db/fk_csvs/*

